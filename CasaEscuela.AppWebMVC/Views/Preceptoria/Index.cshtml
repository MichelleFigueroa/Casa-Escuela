@model IEnumerable<CasaEscuela.BL.DTOs.EstudianteDTOs.EstudiantePreceptoriaMantDTO>

@{
    ViewData["Title"] = "Listado de Preceptor├¡as";
    int idEstudiante = ViewBag.IdEstudiante;
}

<div class="container py-4">
    <div class="card shadow-sm border-0 rounded">
        <div class="card-header bg-white border-bottom-0 py-3 d-flex justify-content-between align-items-center">
            <h4 class="fw-bold mb-0 text-primary">
                <i class="ti ti-history me-2"></i>@ViewData["Title"]
            </h4>
            <div class="d-flex gap-2">
                @if (idEstudiante > 0)
                {
                    <a href="@Url.Action("Create", "Preceptoria", new { idEstudiante = idEstudiante })" class="btn btn-success rounded shadow-sm">
                        <i class="ti ti-plus me-1"></i>Nueva Preceptor├¡a
                    </a>
                    <a href="@Url.Action("Expediente", "Anamnesis", new { idEstudiante = idEstudiante })" class="btn btn-outline-secondary rounded shadow-sm">
                        Ver Expediente
                    </a>
                }
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle" id="preceptoriaIndexTable">
                    <thead class="table-light text-muted small text-uppercase fw-bold">
                        <tr>
                            <th>Estudiante</th>
                            <th>Fecha</th>
                            <th>Estado</th>
                            <th>Resumen</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="small">
                                        <a href="@Url.Action("Expediente", "Anamnesis", new { idEstudiante = item.IdEstudiante })" class="text-decoration-none fw-bold">
                                            <i class="ti ti-user me-1"></i> Ver Estudiante
                                        </a>
                                    </td>
                                    <td class="fw-bold text-dark">
                                        @item.Fecha.ToString("dd/MM/yyyy")
                                    </td>
                                    <td>
                                        <span class="badge @(item.EstadoPreceptoria == 3 ? "bg-dark" : "bg-success") rounded-pill">
                                            @(item.EstadoPreceptoria == 1 ? "Abierta" : item.EstadoPreceptoria == 2 ? "Seguimiento" : "Cerrada")
                                        </span>
                                    </td>
                                    <td class="text-muted text-truncate" style="max-width: 300px;">
                                        @item.ProcesosTrabajados
                                    </td>
                                    <td class="text-end">
                                        <div class="dropdown">
                                            <button class="btn btn-light btn-sm rounded shadow-sm border" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="ti ti-dots-vertical"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 rounded">
                                                <li>
                                                    <a class="dropdown-item" href="@Url.Action("Details", "Preceptoria", new { id = item.Id })">
                                                        <i class="ti ti-file-text me-2 text-info"></i>Ver Detalles
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="@Url.Action("Edit", "Preceptoria", new { id = item.Id })">
                                                        <i class="ti ti-edit me-2 text-primary"></i>Editar
                                                    </a>
                                                </li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <a class="dropdown-item text-danger" href="#">
                                                        <i class="ti ti-trash me-2"></i>Eliminar
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-5">
                                    <i class="ti ti-info-circle fs-2 d-block mb-2"></i>
                                    No hay preceptor├¡as registradas para este estudiante.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
