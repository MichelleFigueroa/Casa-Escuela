@model CasaEscuela.BL.DTOs.AnamnesisRegistroDTO

@{
    ViewData["Title"] = "Línea de Tiempo del Estudiante";
    var student = Model.Estudiante;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold text-primary mb-0">@ViewData["Title"]</h2>
            <p class="text-muted mb-0">@student.Nombres @student.Apellidos (@student.Codigo)</p>
        </div>
        <div>
            <a href="@Url.Action("Index", "Anamnesis")" class="btn btn-outline-secondary shadow-sm rounded">
                <i class="ti ti-arrow-left me-1"></i>Volver al Listado
            </a>
            <a href="@Url.Action("Expediente", "Anamnesis", new { idEstudiante = student.IdEstudiante })" class="btn btn-primary shadow-sm rounded ms-2">
                <i class="ti ti-file-description me-1"></i>Ver Expediente Completo
            </a>
        </div>
    </div>

    <!-- Timeline Content -->
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="timeline-container">
                @if (Model.Timeline != null && Model.Timeline.Any())
                {
                    @foreach (var item in Model.Timeline)
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-@item.Color border-@item.Color">
                                <i class="ti @item.Icono text-white"></i>
                            </div>
                            <div class="timeline-content shadow-sm bg-white rounded p-4 border-start border-4 border-@item.Color">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h5 class="fw-bold text-@item.Color mb-0">@item.Titulo</h5>
                                    <span class="badge bg-light text-dark border"><i class="ti ti-calendar me-1"></i>@item.Fecha.ToString("dd MMM yyyy")</span>
                                </div>
                                <p class="text-secondary mb-0">@item.Descripcion</p>
                                
                                @if(item.Tipo == "Preceptoria" && item.EntidadId.HasValue)
                                {
                                     <div class="mt-2 text-end">
                                        <a href="@Url.Action("Details", "Preceptoria", new { id = item.EntidadId })" class="btn btn-sm btn-link text-decoration-none p-0">Ver detalles <i class="ti ti-arrow-right"></i></a>
                                     </div>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="ti ti-timeline fs-1 text-muted mb-3"></i>
                        <h5 class="text-muted">No hay eventos registrados en la línea de tiempo.</h5>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Styles for Timeline -->
<style>
    .timeline-container {
        position: relative;
        padding-left: 3rem;
    }
    .timeline-container::before {
        content: '';
        position: absolute;
        left: 1rem;
        top: 0;
        bottom: 0;
        width: 3px;
        background: #e9ecef;
    }
    .timeline-item {
        position: relative;
        margin-bottom: 2.5rem;
    }
    .timeline-marker {
        position: absolute;
        left: -3rem;
        top: 0;
        width: 2.2rem;
        height: 2.2rem;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1;
        font-size: 1.1rem;
        box-shadow: 0 0 0 5px #fff; 
    }
    .timeline-content {
        position: relative;
        transition: transform 0.2s;
    }
    .timeline-content:hover {
        transform: translateY(-3px);
    }
    .timeline-content::before {
        content: '';
        position: absolute;
        left: -9px;
        top: 15px;
        width: 18px;
        height: 18px;
        background: #fff;
        transform: rotate(45deg);
        border-left: 1px solid rgba(0,0,0,0.05);
        border-bottom: 1px solid rgba(0,0,0,0.05);
    }
</style>
