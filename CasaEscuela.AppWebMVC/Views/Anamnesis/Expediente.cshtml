@model CasaEscuela.BL.DTOs.AnamnesisRegistroDTO
@{
    ViewData["Title"] = "Expediente del Estudiante";
    var preceptorias = ViewBag.Preceptorias as List<CasaEscuela.BL.DTOs.EstudianteDTOs.EstudiantePreceptoriaMantDTO>;
    var student = Model.Estudiante;
    var anamnesis = Model.Anamnesis;
    var familia = Model.Familiares;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-0">Expediente Integral</h2>
            <p class="text-muted mb-0">@student.Nombres @student.Apellidos (@student.Codigo)</p>
        </div>
        <div class="d-flex gap-2">
            <a href="@Url.Action("Create", "Preceptoria", new { idEstudiante = student.IdEstudiante })" class="btn btn-success shadow-sm rounded">
                <i class="ti ti-plus me-1"></i>Nueva Preceptor√≠a
            </a>
            <a href="@Url.Action("Index", "Anamnesis")" class="btn btn-outline-secondary shadow-sm rounded">
                Volver al Listado
            </a>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-12">
            <h4 class="fw-bold text-primary mb-4"><i class="ti ti-timeline me-2"></i>L√≠nea de Tiempo del Estudiante</h4>
            
            <div class="timeline-container">
                @if (Model.Timeline != null && Model.Timeline.Any())
                {
                    @foreach (var item in Model.Timeline)
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-@item.Color border-@item.Color">
                                <i class="ti @item.Icono text-white"></i>
                            </div>
                            <div class="timeline-content shadow-sm bg-white rounded p-3 border-start border-4 border-@item.Color">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <h6 class="fw-bold text-@item.Color mb-0">@item.Titulo</h6>
                                    <small class="text-muted"><i class="ti ti-calendar me-1"></i>@item.Fecha.ToString("dd MMM yyyy")</small>
                                </div>
                                <p class="text-secondary small mb-0">@item.Descripcion</p>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">No hay eventos registrados en la l√≠nea de tiempo.</p>
                }
            </div>
        </div>
    </div>

    <!-- Styles for Timeline -->
    <style>
        .timeline-container {
            position: relative;
            padding-left: 3rem;
        }
        .timeline-container::before {
            content: '';
            position: absolute;
            left: 1rem;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #e9ecef;
        }
        .timeline-item {
            position: relative;
            margin-bottom: 2rem;
        }
        .timeline-marker {
            position: absolute;
            left: -3rem;
            top: 0;
            width: 2rem;
            height: 2rem;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1;
        }
        .timeline-content {
            position: relative;
        }
        .timeline-content::before {
            content: '';
            position: absolute;
            left: -8px;
            top: 10px;
            width: 16px;
            height: 16px;
            background: #fff;
            transform: rotate(45deg);
            border-left: 1px solid rgba(0,0,0,0.1); /* Match border shadow/color if possible */
            border-bottom: 1px solid rgba(0,0,0,0.1);
        }
    </style>

    <div class="accordion shadow-sm rounded" id="expedienteAccordion">
        
        <!-- üßë‚Äçüéì Informaci√≥n del Estudiante -->
        <div class="accordion-item border-0 mb-3 shadow-sm rounded">
            <h2 class="accordion-header" id="headingEstudiante">
                <button class="accordion-button fw-bold text-primary bg-white shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#collapseEstudiante" aria-expanded="true" aria-controls="collapseEstudiante">
                    <i class="ti ti-user-circle me-2 fs-4"></i>Informaci√≥n General del Estudiante
                </button>
            </h2>
            <div id="collapseEstudiante" class="accordion-collapse collapse show" aria-labelledby="headingEstudiante" data-bs-parent="#expedienteAccordion">
                <div class="accordion-body bg-white">
                    <div class="row g-4">
                        <div class="col-md-3">
                            <label class="small text-muted d-block text-uppercase fw-bold">C√≥digo</label>
                            <span class="fs-6 fw-bold">@student.Codigo</span>
                        </div>
                        <div class="col-md-3">
                            <label class="small text-muted d-block text-uppercase fw-bold">Nombres</label>
                            <span class="fs-6">@student.Nombres</span>
                        </div>
                        <div class="col-md-3">
                            <label class="small text-muted d-block text-uppercase fw-bold">Apellidos</label>
                            <span class="fs-6">@student.Apellidos</span>
                        </div>
                        <div class="col-md-3">
                            <label class="small text-muted d-block text-uppercase fw-bold">Fecha Nacimiento</label>
                            <span class="fs-6">@(student.FechaNacimiento?.ToString("dd/MM/yyyy") ?? "-")</span>
                        </div>
                        <div class="col-md-3">
                            <label class="small text-muted d-block text-uppercase fw-bold">Grado y Secci√≥n</label>
                            <span class="fs-6">@student.Grado @student.Seccion</span>
                        </div>
                        <div class="col-md-3">
                            <label class="small text-muted d-block text-uppercase fw-bold">Jornada</label>
                            <span class="fs-6">@student.Jornada</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- üë®‚Äçüë©‚Äçüëß‚Äçüë¶ Composici√≥n Familiar -->
        <div class="accordion-item border-0 mb-3 shadow-sm rounded">
            <h2 class="accordion-header" id="headingFamilia">
                <button class="accordion-button collapsed fw-bold text-primary bg-white shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFamilia" aria-expanded="false" aria-controls="collapseFamilia">
                    <i class="ti ti-users me-2 fs-4"></i>Composici√≥n Familiar
                </button>
            </h2>
            <div id="collapseFamilia" class="accordion-collapse collapse" aria-labelledby="headingFamilia" data-bs-parent="#expedienteAccordion">
                <div class="accordion-body bg-white">
                    <div class="table-responsive">
                        <table class="table table-sm table-hover align-middle">
                            <thead class="table-light small text-uppercase">
                                <tr>
                                    <th>Nombre Completo</th>
                                    <th>Parentesco</th>
                                    <th>Edad</th>
                                    <th>Ocupaci√≥n</th>
                                    <th>¬øVive con estudiante?</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (familia != null && familia.Any())
                                {
                                    @foreach (var f in familia)
                                    {
                                        <tr>
                                            <td>@f.Nombres @f.Apellidos</td>
                                            <td><span class="badge bg-light text-dark border">@f.TipoParentesco</span></td>
                                            <td>@f.Edad a√±os</td>
                                            <td>@f.Ocupacion</td>
                                            <td>
                                                @if (f.ViveConEstudiante)
                                                {
                                                    <span class="text-success"><i class="ti ti-check me-1"></i>S√≠</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted"><i class="ti ti-x me-1"></i>No</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted py-3">No se registraron familiares.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- üß† Datos de la Anamnesis -->
        <div class="accordion-item border-0 mb-3 shadow-sm rounded">
            <h2 class="accordion-header" id="headingAnamnesis">
                <button class="accordion-button collapsed fw-bold text-primary bg-white shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAnamnesis" aria-expanded="false" aria-controls="collapseAnamnesis">
                    <i class="ti ti-notes me-2 fs-4"></i>Datos de la Anamnesis
                </button>
            </h2>
            <div id="collapseAnamnesis" class="accordion-collapse collapse" aria-labelledby="headingAnamnesis" data-bs-parent="#expedienteAccordion">
                <div class="accordion-body bg-white">
                    @if (anamnesis != null && anamnesis.IdAnamnesis > 0)
                    {
                        <div class="row g-4">
                            <div class="col-md-4">
                                <label class="small text-muted d-block text-uppercase fw-bold">Entrevistador</label>
                                <span>@anamnesis.Entrevistador</span>
                            </div>
                            <div class="col-md-4">
                                <label class="small text-muted d-block text-uppercase fw-bold">Fecha Entrevista</label>
                                <span>@(anamnesis.FechaEntrevista?.ToString("dd/MM/yyyy") ?? "-")</span>
                            </div>
                            <div class="col-12">
                                <hr class="my-2 opacity-25">
                            </div>
                            <div class="col-md-6">
                                <label class="small text-muted d-block text-uppercase fw-bold">Condiciones de Salud</label>
                                <p class="text-dark">@(string.IsNullOrWhiteSpace(anamnesis.CondicionesSalud) ? "Sin datos" : anamnesis.CondicionesSalud)</p>
                            </div>
                            <div class="col-md-6">
                                <label class="small text-muted d-block text-uppercase fw-bold">Desarrollo Motor</label>
                                <p class="text-dark">@(string.IsNullOrWhiteSpace(anamnesis.DesarrolloMotor) ? "Sin datos" : anamnesis.DesarrolloMotor)</p>
                            </div>
                            <div class="col-md-6">
                                <label class="small text-muted d-block text-uppercase fw-bold">Desarrollo Lenguaje</label>
                                <p class="text-dark">@(string.IsNullOrWhiteSpace(anamnesis.DesarrolloLenguaje) ? "Sin datos" : anamnesis.DesarrolloLenguaje)</p>
                            </div>
                            <div class="col-md-6">
                                <label class="small text-muted d-block text-uppercase fw-bold">Situaci√≥n Familiar</label>
                                <p class="text-dark">@(string.IsNullOrWhiteSpace(anamnesis.SituacionFamiliar) ? "Sin datos" : anamnesis.SituacionFamiliar)</p>
                            </div>
                            <div class="col-12">
                                <label class="small text-muted d-block text-uppercase fw-bold">Observaciones Generales</label>
                                <p class="text-dark">@(string.IsNullOrWhiteSpace(anamnesis.Observaciones) ? "Sin observaciones" : anamnesis.Observaciones)</p>
                            </div>
                            
                            @if (anamnesis.AdjuntosExistentes != null && anamnesis.AdjuntosExistentes.Any())
                            {
                                <div class="col-12 mt-4 pt-3 border-top">
                                    <h6 class="fw-bold mb-3"><i class="ti ti-folder me-2"></i>Documentos Adjuntos</h6>
                                    <div class="row g-2">
                                        @foreach (var adj in anamnesis.AdjuntosExistentes)
                                        {
                                            <div class="col-md-6">
                                                <div class="d-flex justify-content-between align-items-center p-2 border rounded bg-light">
                                                    <div class="d-flex align-items-center text-truncate">
                                                        <i class="ti ti-file-text fs-4 text-primary me-2"></i>
                                                        <span class="text-truncate" title="@adj.NombreArchivo">@adj.NombreArchivo</span>
                                                    </div>
                                                    <div class="d-flex gap-1">
                                                        <a href="@Url.Action("DescargarAdjunto", "Anamnesis", new { id = adj.Id })" class="btn btn-sm btn-outline-primary" target="_blank" title="Descargar">
                                                            <i class="ti ti-download"></i>
                                                        </a>
                                                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="eliminarAdjuntoAnamnesis(@adj.Id)" title="Eliminar">
                                                            <i class="ti ti-trash"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <script>
                                    function eliminarAdjuntoAnamnesis(id) {
                                        if(confirm('¬øEst√° seguro de eliminar este documento del expediente?')) {
                                            var form = document.createElement('form');
                                            form.method = 'post';
                                            form.action = '@Url.Action("EliminarAdjunto", "Anamnesis")/' + id;
                                            document.body.appendChild(form);
                                            form.submit();
                                        }
                                    }
                                </script>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-center text-muted py-3">No hay anamnesis registrada para este estudiante.</p>
                    }
                </div>
            </div>
        </div>

        <!-- üìã Historial de Preceptor√≠as -->
        <div class="accordion-item border-0 mb-3 shadow-sm rounded">
            <h2 class="accordion-header" id="headingPreceptorias">
                <button class="accordion-button collapsed fw-bold text-primary bg-white shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#collapsePreceptorias" aria-expanded="false" aria-controls="collapsePreceptorias">
                    <i class="ti ti-history me-2 fs-4"></i>Historial de Preceptor√≠as
                </button>
            </h2>
            <div id="collapsePreceptorias" class="accordion-collapse collapse" aria-labelledby="headingPreceptorias" data-bs-parent="#expedienteAccordion">
                <div class="accordion-body bg-white">
                    <div class="list-group list-group-flush">
                        @if (preceptorias != null && preceptorias.Any())
                        {
                            @foreach (var p in preceptorias)
                            {
                                <div class="list-group-item py-4 border-0 border-bottom">
                                    <div class="d-flex w-100 justify-content-between align-items-center mb-2">
                                        <h6 class="mb-0 fw-bold fs-5">Sesi√≥n del @p.Fecha.ToString("dd/MM/yyyy")</h6>
                                        <span class="badge @(p.EstadoPreceptoria == 3 ? "bg-dark" : p.EstadoPreceptoria == 2 ? "bg-warning text-dark" : "bg-success") rounded-pill px-3">
                                            @(p.EstadoPreceptoria == 1 ? "Abierta" : p.EstadoPreceptoria == 2 ? "Seguimiento" : "Cerrada")
                                        </span>
                                    </div>
                                    <div class="row g-3">
                                        <div class="col-md-12">
                                            <p class="mb-2"><strong>Temas trabajados:</strong> @p.ProcesosTrabajados</p>
                                        </div>
                                        <div class="col-md-6">
                                            <p class="mb-2 small text-muted"><strong>Metas:</strong> @p.MetasSiguientes</p>
                                        </div>
                                        <div class="col-md-6 text-end">
                                            <a href="@Url.Action("Details", "Preceptoria", new { id = p.Id })" class="btn btn-sm btn-outline-primary rounded">
                                                <i class="ti ti-arrow-right me-1"></i>Detalles Completos
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="ti ti-checkbox fs-1 text-muted d-block mb-2"></i>
                                <p class="text-muted">No hay preceptor√≠as registradas para este estudiante.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
