@model CasaEscuela.EN.EstudianteEN

<div class="container py-4">
    <div class="card border-0 shadow-lg">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="fas fa-id-card me-2"></i>Información del Estudiante</h4>
                <a href="@Url.Action("Index")" class="btn btn-light btn-sm fw-bold">Volver</a>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-6 border-end">
                    <h5 class="text-primary border-bottom pb-2">Datos Académicos</h5>
                    <p><strong>Código:</strong> @Model.Codigo</p>
                    <p><strong>Nombre:</strong> @Model.Nombres @Model.Apellidos</p>
                    <p><strong>Grado/Sección:</strong> @Model.Grado "@Model.Seccion"</p>
                    <p><strong>Jornada:</strong> @Model.Jornada</p>
                </div>
                <div class="col-md-6 ps-4">
                    <h5 class="text-primary border-bottom pb-2">Estado de Registro</h5>
                    <p>
                        <strong>Estado:</strong>
                        <span class="badge @(Model.Estado ? "bg-success" : "bg-danger")">
                            @(Model.Estado ? "Activo" : "Inactivo")
                        </span>
                    </p>
                    <p><strong>Fecha de Ingreso:</strong> @Model.FechaRegistro.ToString("dd/MM/yyyy")</p>
                    <p><strong>Sexo:</strong> @Model.Sexo</p>
                </div>
            </div>

            <div class="mt-4">
                <h5 class="text-primary border-bottom pb-2">Antecedentes Médicos (Anamnesis)</h5>
                <div class="p-3 bg-light rounded">
                    @(Model.Anamnesis?.Observaciones ?? "No se han registrado observaciones médicas.")
                </div>
            </div>
        </div>
    </div>
</div>