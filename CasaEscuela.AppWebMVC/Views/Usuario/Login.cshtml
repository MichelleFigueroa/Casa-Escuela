@model UsuarioLoginDTO
@{
    Layout = null;
}
<!doctype html>
<html lang="es">
<head>
    <title>Acceso - Casa Escuela</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="icon" type="image/png" href="@Url.Content("~/img/logo.png")" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            /* Paleta "Enterprise Slate" */
            --brand-dark: #0f172a; /* Azul casi negro para fondos principales */
            --brand-primary: #2563eb; /* Azul Real para acciones (Botones) */
            --brand-hover: #1d4ed8; /* Azul más oscuro para hover */
            --text-main: #1e293b; /* Gris muy oscuro para textos */
            --text-muted: #64748b; /* Gris medio para subtítulos */
            --input-bg: #f8fafc; /* Fondo muy sutil para inputs */
            --border-color: #e2e8f0; /* Bordes suaves */
        }

        body, html {
            height: 100%;
            font-family: 'Inter', system-ui, sans-serif; /* Tipografía Premium */
            background-color: #ffffff;
            color: var(--text-main);
        }

        /* --- Estructura --- */
        .login-wrapper {
            min-height: 100vh;
            overflow: hidden;
        }

        /* Panel Izquierdo (Brand) */
        .brand-panel {
            background-color: var(--brand-dark);
            position: relative;
            display: flex;
            flex-direction: column;
            justify-content: space-between; /* Distribuye contenido arriba y abajo */
            padding: 4rem;
            color: white;
        }

            /* Patrón de fondo sutil y profesional (Líneas abstractas) */
            .brand-panel::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-image: radial-gradient(#334155 1px, transparent 1px);
                background-size: 30px 30px;
                opacity: 0.15;
            }

        .brand-content {
            position: relative;
            z-index: 2;
        }

        .hero-text h1 {
            font-weight: 700;
            letter-spacing: -0.02em;
            line-height: 1.2;
            margin-bottom: 1.5rem;
        }

        /* Panel Derecho (Formulario) */
        .form-panel {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            background: white;
        }

        .login-card {
            width: 100%;
            max-width: 380px; /* Un poco más estrecho para elegancia */
        }

        /* Inputs Profesionales (Estilo Stripe/Vercel) */
        .form-floating > .form-control {
            background-color: var(--input-bg);
            border: 1px solid var(--border-color); /* Borde fino */
            border-radius: 8px; /* Bordes menos redondeados, más serios */
            height: 3.5rem;
            font-size: 0.95rem;
            font-weight: 500;
            color: var(--text-main);
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05); /* Sombra micro */
            transition: all 0.2s ease;
        }

            .form-floating > .form-control:focus {
                background-color: white;
                border-color: var(--brand-primary);
                box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1); /* Ring de enfoque suave */
            }

        .form-floating > label {
            color: var(--text-muted);
            padding-left: 1rem;
        }

        .input-icon {
            color: var(--text-muted);
            top: 50%;
            transform: translateY(-50%);
            right: 1rem;
            position: absolute;
            pointer-events: none;
        }

        /* Botón Ejecutivo */
        .btn-login {
            background-color: var(--brand-dark); /* Usamos el color oscuro para el botón */
            color: white;
            border: none;
            border-radius: 8px;
            padding: 0.9rem;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.2s;
        }

            .btn-login:hover {
                background-color: var(--brand-primary); /* Cambia a azul vivo al pasar el mouse */
                transform: translateY(-1px);
                box-shadow: 0 4px 12px rgba(37, 99, 235, 0.2);
                color: white;
            }

        /* Validaciones */
        .field-validation-error {
            font-size: 0.8rem;
            color: #ef4444;
            margin-top: 4px;
            font-weight: 500;
        }

        /* Responsive */
        @@media (max-width: 991.98px) {
            .brand-panel

        {
            padding: 2.5rem;
            min-height: 25vh;
        }

        .hero-text h1 {
            font-size: 2rem;
        }

        }

        @@media (max-width: 767.98px) {
            .login-wrapper

        {
            flex-direction: column;
        }

        .brand-panel {
            flex: 0 0 auto;
        }

        .form-panel {
            padding-top: 3rem;
        }

        }
    </style>
</head>
<body>

    <div class="container-fluid p-0">
        <div class="row g-0 login-wrapper">

            <div class="col-lg-6 brand-panel">
                <div class="brand-header brand-content">
                    <div class="d-flex align-items-center gap-3">
                        <img src="~/img/logo.png" alt="Logo" />
                    </div>
                </div>

                <div class="brand-content hero-text">
                    <h1 class="display-4">Gestión académica<br>simplificada.</h1>
                    <p class="lead text-white-50" style="max-width: 400px;">
                        Plataforma integral para docentes y administradores. Acceder a  expediente y evaluaciones.
                    </p>
                </div>

                <div class="brand-content">
                    <div class="d-flex gap-4 text-white-50 small">
                        <span>&copy; @DateTime.Now.Year Casa Escuela</span>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 form-panel">
                <div class="login-card fade-in">
                    <div class="text-center mb-5 d-lg-none">
                        <h3 class="fw-bold text-dark">Iniciar Sesión</h3>
                    </div>
                    <div class="text-start mb-4 d-none d-lg-block">
                        <h2 class="fw-bold" style="color: var(--text-dark)">Hola de nuevo</h2>
                        <p class="text-muted">Ingresa tus credenciales para acceder al sistema.</p>
                    </div>

                    <form asp-action="Login" asp-controller="Usuario" method="post" id="loginForm" novalidate autocomplete="off">
                        @Html.AntiForgeryToken()

                        @if (!string.IsNullOrEmpty(ViewBag.Error as string))
                        {
                            <div class="alert alert-danger d-flex align-items-center border-0 shadow-sm" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <div>@ViewBag.Error</div>
                            </div>
                        }

                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                        <div class="form-floating mb-4 position-relative">
                            <input asp-for="Email" class="form-control" id="emailInput" placeholder="nombre@ejemplo.com" autocomplete="email">
                            <label for="emailInput">Correo Electrónico</label>
                            <i class="bi bi-envelope input-icon"></i>
                            <span asp-validation-for="Email" class="field-validation-error"></span>
                        </div>

                        <div class="form-floating mb-4 position-relative">
                            <input asp-for="Password" type="password" class="form-control" id="passwordInput" placeholder="Contraseña" autocomplete="current-password">
                            <label for="passwordInput">Contraseña</label>
                            <i class="bi bi-lock input-icon"></i>
                            <span asp-validation-for="Password" class="field-validation-error"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" id="btnLogin" class="btn btn-login">
                                <span class="btn-text">Ingresar al Sistema</span>
                                <span class="spinner-border spinner-border-sm ms-2 d-none" role="status" aria-hidden="true"></span>
                            </button>
                        </div>

                        <div class="text-center mt-4">
@*                             <a href="#" class="text-decoration-none small text-muted hover-primary">¿Olvidaste tu contraseña?</a>
 *@                        </div>
                    </form>

                    <div class="text-center mt-5">
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            const form = $('#loginForm');
            const btn = $('#btnLogin');
            const spinner = btn.find('.spinner-border');
            const btnText = btn.find('.btn-text');

            form.on('submit', function (e) {
                if (form.valid()) {
                    // Efecto visual de carga
                    btn.prop('disabled', true);
                    btnText.text('Validando...');
                    spinner.removeClass('d-none');

                    // No prevenimos el default para que el form se envíe al servidor
                    // A menos que uses AJAX, en cuyo caso aquí iría tu llamada $.ajax
                }
            });

            // Pequeña animación en los inputs al cargar si hay datos
            $('.form-control').each(function() {
                if ($(this).val()) {
                    $(this).addClass('is-valid');
                }
            });
        });
    </script>
</body>
</html>