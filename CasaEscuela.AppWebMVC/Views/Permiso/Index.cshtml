@using CasaEscuela.BL.DTOs.PermisosDTOs
@using CasaEscuela.BL.DTOs.UsuarioDTOs
@model IEnumerable<PermisoDTO>

@{
    ViewData["Title"] = "Buscar Permisos";
    var empleados = ViewBag.Empleados as List<UsuarioMantDTO>;
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h5 class="m-0 text-primary"><i class="fas fa-search"></i> Buscar Permisos</h5>
        @Html.ActionLink("➕ Nuevo Permiso", "Mant", new { Id = 0, accion = (int)ActionsUI_Enums.NUEVO }, new { @class = "btn btn-sm btn-primary" })
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Index" method="get">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Vista</label>
                                <input type="text" class="form-control" name="vista_like" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Id Usuario</label>
                                <input type="number" class="form-control" name="idUsuario_equal" />
                            </div>
                        </div>
                        <div class="col-md-4 text-right mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-search"></i> Buscar
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Permisos</h6>
    </div>
    <div class="card-body">

        <!-- Tabla para escritorio -->
        <div class="table-responsive d-none d-md-block">
            <table id="tbPermisos" class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Vista</th>
                        <th>Crear</th>
                        <th>Editar</th>
                        <th>Eliminar</th>
                        <th>Ver</th>
                        <th>Empleados</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Vista</td>
                            <td>@(item.PuedeCrear ? "Sí" : "No")</td>
                            <td>@(item.PuedeEditar ? "Sí" : "No")</td>
                            <td>@(item.PuedeEliminar ? "Sí" : "No")</td>
                            <td>@(item.PuedeVer ? "Sí" : "No")</td>
                            <td>
                                @if(empleados != null)
                                {
                                    foreach(var emp in empleados)
                                    {
                                        <span class="badge bg-secondary">@emp.Nombre</span>
                                    }
                                }
                            </td>
                            <td class="botonestabla">
                                @Html.ActionLink("Modificar", "Mant", new { Id = item.Id, Accion = (int)ActionsUI_Enums.MODIFICAR }, new { @class = "btn btn-success btn-sm mr-1" })
                                @Html.ActionLink("Ver", "Mant", new { Id = item.Id, Accion = (int)ActionsUI_Enums.VER }, new { @class = "btn btn-info btn-sm mr-1" })
                                @Html.ActionLink("Eliminar", "Mant", new { Id = item.Id, Accion = (int)ActionsUI_Enums.ELIMINAR }, new { @class = "btn btn-danger btn-sm" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Tarjetas para móviles -->
        <div class="d-block d-md-none">
            @foreach (var item in Model)
            {
                <div class="card mb-3 sborder-left-primary shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fas fa-lock"></i> @item.Vista</h5>
                        <p><strong>Crear:</strong> @(item.PuedeCrear ? "Sí" : "No")</p>
                        <p><strong>Editar:</strong> @(item.PuedeEditar ? "Sí" : "No")</p>
                        <p><strong>Eliminar:</strong> @(item.PuedeEliminar ? "Sí" : "No")</p>
                        <p><strong>Ver:</strong> @(item.PuedeVer ? "Sí" : "No")</p>
                        <p><strong>Empleados:</strong>
                            @if(empleados != null)
                            {
                                foreach(var emp in empleados)
                                {
                                    <span class="badge bg-secondary">@emp.Nombre</span>
                                }
                            }
                        </p>
                        <div class="d-flex justify-content-end gap-1 flex-wrap">
                            <a href="@Url.Action("Mant", new { Id = item.Id, Accion = (int)ActionsUI_Enums.MODIFICAR })" class="btn btn-sm btn-success">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="@Url.Action("Mant", new { Id = item.Id, Accion = (int)ActionsUI_Enums.VER })" class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="@Url.Action("Mant", new { Id = item.Id, Accion = (int)ActionsUI_Enums.ELIMINAR })" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tbPermisos').DataTable({
                paging: false,
                searching: false,
                ordering: false
            });
        });
    </script>
}
